<% content_for :title, "Stakkd - Companies" %>

<div class="max-w-7xl mx-auto my-28 px-6">
  <div class="flex gap-8 justify-between flex-col sm:flex-row w-full mt-28 mb-10">
    <h3 class="text-4xl font-bold font-domine text-white text-center">Companies</h3>
    <%= link_to "Add a company", new_company_path, class: "link" %>
  </div>
  <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
    <% @companies.each do |company| %>
      <%= link_to company do %>
        <div class="group w-full aspect-square border border-pop rounded-lg overflow-hidden relative">
          <div class="absolute w-full h-full flex flex-col gap-4 p-4 justify-center items-center opacity-0 group-hover:opacity-100 bg-pop/50 backdrop-blur-sm z-10 transition duration-300 ease-in-out">
            <p class="font-domine font-bold text-2xl text-white text-center"><%= company.name %></p>
          </div>
          <%= image_tag company.logo %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
