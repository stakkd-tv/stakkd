        <td><i class="fa-solid fa-square-xmark text-red-400"></i></td>
      </tr>
      <tr>
        <td>Ad free</td>
        <td><i class="fa-solid fa-square-check text-green-300"></i></td>
        <td><i class="fa-solid fa-square-xmark text-red-400"></i></td>
        <td><i class="fa-solid fa-square-check text-green-300"></i></td>
      </tr>
      <tr>
        <td>Movie and TV tracking</td>
        <td><i class="fa-solid fa-square-check text-green-300"></i></td>
        <td><i class="fa-solid fa-square-xmark text-green-300"></i></td>
        <td><i class="fa-solid fa-square-check text-red-400"></i></td>
      </tr>
