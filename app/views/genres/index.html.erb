<% content_for :title, "Stakkd - Genres" %>

<div class="max-w-6xl mx-auto my-28 px-6">
  <h3 class="text-4xl font-bold font-domine text-white mt-28 mb-10 text-center">Genres</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Movies</th>
        <th>Shows</th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td>0</td>
          <td>0</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
