<% content_for :title, "Stakkd - #{@relatable} backgrounds" %>
<% model_params = {relatable_model.to_sym => @relatable} %>

<%= render "#{relatable_model_plural}/header", model_params %>

<div class="max-w-7xl mx-auto my-8 px-6">
  <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
    <% @backgrounds.each do |background| %>
      <div class="w-full aspect-16/9 border border-pop rounded-lg overflow-hidden relative">
        <%= image_tag background %>
      </div>
    <% end %>
  </div>
</div>
